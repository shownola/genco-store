<%= render 'shared/errors', obj: @product %>

<%= form_for(@product), html: { multipart: true } do |f| %>

<div class="row">
  <div class="col-md-10">
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control', autofocus: true %>
    </div>

    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_area :description, class: 'form-control', rows: 5, placeholder: 'Enter product description' %>
    </div>
    <div class="form-group">
      <%= f.label :uses %>
      <%= f.text_area :uses, class: 'form-control', rows: 5, placeholder: 'Enter uses for product' %>
    </div>

    <div class="row">
      <div class="col-md-12">
        <div class="form-group">
          <%= f.label :image %>
          <%= f.file_field :image, class: 'btn' %>
        </div>
        <div class="form-group">
          <%= f.label :price %>
          <%= f.text_field :price %>
        </div>
        <div class="form-group">
          <%= f.label :cost %>
          <%= f.text_field :cost %>
        </div>
      </div>

      <div class="form-group col-md-offset-2 col-md-10">
        <%= f.submit class: 'btn btn-secondary btn-block' %>
      </div>

    </div>
  </div>
</div>

<% end %>


<div class="row justify-content-center">
  [ <%= link_to 'Cancel request and return to products', products_path, class: 'cancel px-2' %> ]
</div>
