

<%= form_for(@product) do |f| %>
  <%= render 'shared/errors', object: @product %>
<div class="row">
  <div class="col-md-10">
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control', placeholder: 'Enter name of product' %>
    </div>

    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_area :description, class: 'form-control', rows: 5, placeholder: 'Enter product description' %>
    </div>

    <div class="row">
      <div class="col-md-12">
        <div class="form-group">
          <%= f.label :image %>
          <%= f.file_field :image, class: 'btn' %>
        </div>
        <div class="form-group">
          <%= f.label :price %>
          <%= f.text_field :price %>
        </div>
        <div class="form-group">
          <%= f.label :cost %>
          <%= f.text_field :cost %>
        </div>
      </div>

      <div class="form-group col-md-offset-2 col-md-10">
        <%= f.submit class: 'btn btn-secondary btn-block' %>
      </div>

    </div>
  </div>
</div>

<% end %>

