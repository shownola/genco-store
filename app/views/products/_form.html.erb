<form>
  <div class="row">
    <div class="form-group col-md-12">
      <%= form_for @product, html: {class: 'form-horizontal', multipart: true, role: 'form'} do |f| %>
        <div class="control-label col-md-2">
          <%= f.label :name %>
        </div>
        <div class="col-md-10">
          <%= f.text_field :name, class: 'form-control', placeholder: 'name of product', autofocus: true %>
        </div>

        <div class="control-label col-md-2">
          <%= f.label :description %>
        </div>
        <div class="col-md-10">
          <%= f.text_area :name, class: 'form-control', rows: "5", placeholder: 'description of product', autofocus: true %>
        </div>
        <div class="form-row">
          <div class="form-group col-md-4">
            <%= f.label :image %>
            <%= f.file_field :image, class: 'btn' %>
          </div>
          <div class="form-group col-md-4">
            <%= f.label :price %>
            <%= f.text_field :price %>
          </div>
          <div class="form-group col-md-4">
            <%= f.label :cost %>
            <%= f.text_field :cost %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-md-offset-2 col-md-10">
            <%= f.submit class: 'btn btn-secondary' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

</form>
<div class="row justify-content-center">
  [ <%= link_to 'Cancel request and return to products', products_path, class: 'cancel px-2' %> ]
</div>
